{
  "name": "hg",
  "version": "1.0.0",
  "description": "A Mercurial client for Node",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/jdalrymple/node-hg-plus"
  },
  "keywords": [
    "mercurial",
    "hg",
    "client"
  ],
  "author": "Justin Dalrymple <justin.s.dalrymple@gmail.com>",
  "license": "MIT",
  "scripts": {
    "nsp": "nsp check",
    "_deps-check": "npm-check-updates --error-level 2 with --semverLevel major",
